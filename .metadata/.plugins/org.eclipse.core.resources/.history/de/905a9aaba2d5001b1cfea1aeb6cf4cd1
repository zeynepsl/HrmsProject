package kodlamaio.hrms.business.concretes;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import kodlamaio.hrms.business.abstracts.CandidateCoverLetterCVService;
import kodlamaio.hrms.core.utilities.results.DataResult;
import kodlamaio.hrms.core.utilities.results.Result;
import kodlamaio.hrms.core.utilities.results.SuccessDataResult;
import kodlamaio.hrms.core.utilities.results.SuccessResult;
import kodlamaio.hrms.dataAccess.abstracts.CandidateCoverLetterCVDao;
import kodlamaio.hrms.entities.concretes.CandidateCoverLetterCV;

@Service
public class CandidateCoverLetterCVManager implements CandidateCoverLetterCVService{

	CandidateCoverLetterCVDao candidateCoverLetterCVDao;
	
	@Autowired
	public CandidateCoverLetterCVManager(CandidateCoverLetterCVDao candidateCoverLetterCVDao) {
		super();
		this.candidateCoverLetterCVDao = candidateCoverLetterCVDao;
	}

	@Override
	public Result add(CandidateCoverLetterCV entity) {
		candidateCoverLetterCVDao.save(entity);
		return new SuccessResult("on yazi eklendi!");
	}

	@Override
	public Result delete(CandidateCoverLetterCV entity) {
		candidateCoverLetterCVDao.delete(entity);
		return new SuccessResult("on yazi eklendi!");
	}

	@Override
	public Result update(CandidateCoverLetterCV entity) {
		candidateCoverLetterCVDao.save(entity);
		return new SuccessResult("on yazi eklendi!");
	}

	@Override
	public DataResult<List<CandidateCoverLetterCV>> getAll() {
		return new SuccessDataResult<List<CandidateCoverLetterCV>>(candidateCoverLetterCVDao.findAll(), "on yazilar listelendi");
	}


}
