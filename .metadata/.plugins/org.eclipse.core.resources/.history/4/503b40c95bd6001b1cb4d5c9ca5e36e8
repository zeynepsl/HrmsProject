package kodlamaio.hrms.api.controllers;

import java.io.IOException;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import kodlamaio.hrms.business.abstracts.CandidateImageCVService;
import kodlamaio.hrms.business.abstracts.CandidateService;
import kodlamaio.hrms.core.utilities.results.DataResult;
import kodlamaio.hrms.core.utilities.results.Result;
import kodlamaio.hrms.entities.concretes.Candidate;
import kodlamaio.hrms.entities.concretes.CandidateCV;
import kodlamaio.hrms.entities.concretes.CandidateImageCV;

@RestController
@RequestMapping("/api/images")
public class CandidateCVImagesController {
	CandidateImageCVService imageCVService;
	CandidateService candidateService;

	@Autowired
	public CandidateCVImagesController(CandidateImageCVService imageCVService, CandidateService candidateService) {
		super();
		this.imageCVService = imageCVService;
		this.candidateService = candidateService;
	}
	

	@PostMapping("/upload")
	public ResponseEntity<Result> upload(@RequestParam final int candidateCVId, @RequestBody final MultipartFile imageFile) {
		final Result result = imageCVService.upload(CandidateImageCV.builder().candidateCV(CandidateCV.builder().id(candidateCVId).build()).build(),
				imageFile);

		return ResponseEntity.ok(result);
	}
	
	/*	@PostMapping("/add")
	public Result add(@RequestParam(value = "id") int id, @RequestParam(value = "imageFile") MultipartFile imageFile) throws IOException {
		Candidate candidate = candidateService.getById(id).getData();
		
		CandidateCV candidateCV = new CandidateCV(); 
		
		
		CandidateImageCV candidateImageCV = new CandidateImageCV();
		
		candidateImageCV.setCandidateCV(candidateCV);
		candidateCV.setCandidate(candidate);
		//candidateCV.setImageCVs(imageCV)

	

		return imageCVService.upload(imageCV, imageFile);
	}*/

	
	
	@PostMapping("/add")
	public ResponseEntity<?> upload(@RequestBody CandidateImageCV image,@RequestParam("imageFile") MultipartFile imageFile) throws IOException{
		return new ResponseEntity<>(imageCVService.upload(image, imageFile), HttpStatus.OK);
				
	}
	
	/*
	 * public Result add(@RequestParam(value = "id") int id, @RequestParam(value = "imageFile") MultipartFile imageFile) {
		//CandidateCV candidateCV = candidateCVService.getById(id).getData();
		CandidateImageCV imageCV = new CandidateImageCV();
		//candidateCV.setImageCVs(imageCV)
		
		final Result result = imageCVService.upload();
		
		
		return imageCVService.upload(imageCV, imageFile);
	}*/
	
	@GetMapping("/getAll")
	public DataResult<List<CandidateImageCV>> getAll() {
		return imageCVService.getAll();
	} 
}
